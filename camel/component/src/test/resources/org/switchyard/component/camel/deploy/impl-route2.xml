<routes xmlns="http://camel.apache.org/schema/spring">
    <route id="CamelTestRoute2">
        <from uri="switchyard://OrderService2"/>
        <log message="Route2 Properties [{{user.name}}, {{prop.domain}}, {{prop.composite}}, {{prop.component}}]"/>
        <validate>
            <simple>${properties:prop.domain} == 'prop.domain value'
                  &amp;&amp; ${properties:prop.composite} == 'prop.composite value'
                  &amp;&amp; ${properties:prop.component} == 'prop.component2 value'</simple>
        </validate>
    </route>
</routes>